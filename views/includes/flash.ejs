<% if (Array.isArray(success) && success.length) { %>
    <div class="alert alert-success col-6 offset-3 mt-3 d-flex justify-content-between align-items-center" role="alert">
        <span><%= success %></span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>




<% if (Array.isArray(error) && error.length) { %>
    <div class="alert alert-danger col-6 offset-3 mt-3  d-flex justify-content-between align-items-center" role="alert">
        <span><%= error %></span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
