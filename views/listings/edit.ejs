<%- layout('/layouts/boilerplate') %>

<body>
     
    <form method="POST" action="/listings/<%=lists._id%>?_method=PUT" enctype="multipart/form-data" >
        <div class="row offset-2 mt-3">
            <div class="col-7">
                <h3>Edit listing</h3>
                <div class="mb-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input type="text"  name="lists[title]" value="<%=lists.title%>" class="form-control">
                   
                </div>
                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>
                    <textarea name="lists[description]" value="<%=lists.description%>"class="form-control"  type="text"><%=lists.description%></textarea>
                   
                </div>
                <div class="mb-3">
                    Original listing image<br>
                    <img src="<%=originalimageurl%>">
                </div>
                <div class="mb-3">
                    <lable for="image" class="form-label">Upload Image-url</lable>
                    <input name="lists[image]"  type="file" class="form-control" >
                    
                   
                </div>
                <div class="row">

                    <div class="mb-3 col-4">
                        <lable for="price" class="form-label">Pricel</lable>
                        <input name="lists[price]" type="number" value="<%=lists.price%>"class="form-control" >
                    </div>
                    <div class="mb-3 col-8">
                        <lable for="country" class="form-label">Countryl</lable>
                        <input name="lists[country]"  type="text" value="<%=lists.country%>" class="form-control">
                    </div>
                </div>
              
                <div class="mb-3">
                    <lable for="country" class="form-label">Countryl</lable>
                    <input name="lists[location]"  type="text" value="<%=lists.location%>" class="form-control">
                   
                </div>

        <button class="btn btn-success mt-2 mb-3">Add</button>
                
            </div>
        </div>
       
       
    </form>
    
</body>
